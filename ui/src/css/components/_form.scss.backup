::-webkit-input-placeholder {
  color: $color-gray--dark;
}

.checkbox {
  -webkit-appearance: none;
  background-color: $color-charcoal--light;
  border-radius: 3px;
  height: $spacing-3;
  width: $spacing-3;
  margin: $spacing-0;
  &:focus {
    outline: none;
  }
  &:hover,
  &:focus {
    background-color: $color-gray--dark50;
  }
  &:checked {
    background-color: $color-purple;
    & + svg {
      opacity: 1;
    }
  }

  & + svg {
    margin-left: 1px;
    opacity: 0;
    position: absolute;
    stroke: currentColor;
    stroke-width: 2px;
  }
}

.radio {
  @extend .checkbox;
  display: block;
  margin: $spacing-4 auto;
  &:first-child {
    margin-top: $spacing-3;
  }
}

.form-control,
.form-select {
  -webkit-appearance: none;
  background-color: $color-charcoal--light;
  border: 1px solid $color-charcoal--light;
  border-radius: 3px;
  box-sizing: border-box;
  color: $color-white;
  font-size: inherit;
  font-family: "Inter var", sans-serif;
  height: 50px;
  padding-left: 16px;
  padding-right: 16px;
  transition-duration: 0.25s;
  transition-property: color, border-color;
  &:focus {
    border-color: $color-purple;
    outline: none;
  }
  &[type="search"]:not(.input-sm) {
    padding-left: $spacing-6;

    & + svg {
      position: absolute;
      padding-left: $spacing-3;
    }
  }
  &.has-border {
    background-color: transparent;
    border-color: $color-gray--dark50;
    &:focus {
      border-color: $color-purple;
    }
  }
  &.has-border.is-invalid {
    border-color: $color-red;
    color: $color-red;
  }
  &.disabled {
    border-color: $color-gray--dark50;
    color: $color-gray--dark;
    background-color: $color-charcoal--medium;
  }
  option {
    background-color: $color-charcoal--light;

    &:checked {
      color: $color-white;
    }
  }
}

textarea.form-control {
  min-height: 164px;
  padding-bottom: $spacing-3;
  padding-top: $spacing-3;
  resize: vertical;
  &.disabled {
    pointer-events: none;
    cursor: not-allowed;
  }
}

.form-select {
  -webkit-appearance: none;
  color: $color-gray--dark;
  padding: 0 $spacing-4 0 $spacing-2;
  &:focus {
    color: $color-white;
  }

  & + svg {
    pointer-events: none;
    position: absolute;
    right: 6px;
  }
}

.has-border.is-remove {
  border-color: $color-red;
  color: $color-red;
  & + svg {
    color: $color-red;
  }
}

.input-sm {
  height: 32px;
  padding-left: $spacing-2;
  padding-right: $spacing-2;
  &.disabled {
    cursor: not-allowed;
  }
}

.input-sm1 {
  height: 24px;
  padding-left: $spacing-2;
  padding-right: $spacing-2;
}

.input-sm2 {
  height: 30px;
  padding-left: $spacing-2;
  padding-right: $spacing-2;
  color: $color-gray--light;
  width: 50px;
}

.select-sm {
  height: 33px;

  .project__person & {
    // On invite people to project roles
    width: 115px;
  }
}

.select-sm1 {
  height: 24px;
  line-height: inherit;
  color: #ffffff;
  cursor: pointer;
  -webkit-appearance: menulist;
}

.select-sm2 {
  height: 30px;
  line-height: inherit;
  color: $color-gray--light;
  &:focus {
    color: $color-gray--light;
  }
  padding-left: 0px;
  padding-right: 0px;
  cursor: pointer;
  -webkit-appearance: menulist;
}

.select-in-input {
  position: absolute;
  right: $spacing-2;
  text-align-last: end;
  width: initial;
  &:focus {
    border-color: transparent;
  }

  & + svg {
    right: 14px;
  }
}

.radio-slide-wrap {
  height: 40px;
}

.radio-slide {
  background-color: $color-purple;
  height: 12px;
  margin-left: $spacing-2;
  margin-right: $spacing-2;
  position: relative;
  width: 25px;
  transition-duration: 0.25s;
  transition-property: background-color;
  &.disable {
    background-color: $color-gray--dark;
  }
  &.null {
    background-color: $color-gray--dark50;
  }
}

.radio-slide-circle {
  background-color: $color-white;
  border-radius: 50%;
  content: "";
  height: 8px;
  left: 2px;
  position: absolute;
  top: 2px;
  transition-duration: 0.25s;
  transition-property: transform;
  width: 8px;

  &.null-value {
    background-color: $color-gray--light;
    transform: translateX(6px);
  }
  &.false-value {
    transform: translateX(13px);
  }
}

// Range
.range {
  -webkit-appearance: none;
  background-color: $color-gray--dark;
  border-radius: 3px;
  height: 3px;
  &::-webkit-slider-thumb {
    -webkit-appearance: none;
    height: 10px;
    width: 10px;
    border-radius: 50%;
    background-color: $color-white;
  }
  &:focus {
    outline: none;
    &::-webkit-slider-thumb {
      -webkit-appearance: none;
      height: 10px;
      width: 10px;
      border-radius: 50%;
      background-color: $color-gray--light;
    }
  }
}

.zoom-range-div {
  -webkit-appearance: none;
  background-color: $color-white--75;
  border-radius: 3px;
  height: 3px;
  &:focus {
    outline: none;
  }
  position: relative;
}

.zoom-range-loaded {
  -webkit-appearance: none;
  background-color: $color-white--75;
  border-radius: 3px;
  height: 3px;
  &:focus {
    outline: none;
  }
  position: absolute;
  width: 0px;
}

.range-div {
  -webkit-appearance: none;
  background-color: $color-gray--dark50;
  border-radius: 3px;
  height: 3px;
  &:focus {
    outline: none;
  }
  position: relative;
}

.range-loaded {
  -webkit-appearance: none;
  background-color: $color-gray--dark;
  border-radius: 3px;
  height: 3px;
  &:focus {
    outline: none;
  }
  position: absolute;
  width: 0px;
}

.range-ondemand {
  -webkit-appearance: none;
  background-color: $color-white--25;
  border-radius: 3px;
  height: 3px;
  &:focus {
    outline: none;
  }
  position: absolute;
  width: 0px;
}

input[type="range"]::-webkit-slider-thumb {
  -webkit-appearance: none;
  height: 10px;
  width: 10px;
  z-index: 1;
  border-radius: 50%;
  // margin-top: -4px;
  // margin-left: -5px;
  background-color: $color-white;
  &:focus {
    outline: none;
    background-color: $color-gray--light;
    border: $color-white;
  }
}
.range-handle {
  -webkit-appearance: none;
  height: 10px;
  width: 10px;
  z-index: 1;
  position: absolute;
  border-radius: 50%;
  margin-top: -3.5px;
  margin-left: -5px;
  background-color: $color-white;
  &:focus {
    outline: none;
  }
}

.range-handle-selected {
  background-color: $color-gray--light;
  border: $color-white;
}

.autocomplete {
  background: $color-charcoal--light70;
  z-index: 1000;
  overflow: auto;
  box-sizing: border-box;
  border: 1px solid rgba(50, 50, 50, 0.6);
  //color: $color-gray--light;
}

.autocomplete * {
  font: inherit;
}

.autocomplete > div {
  padding: 0 4px;
}

.autocomplete .group {
  color: $color-gray--dark;
}

strong.match {
  font-weight: bold !important;
}

.autocomplete > div:hover:not(.group),
.autocomplete > div.selected {
  background: $color-purple;
  cursor: pointer;
}

.error-label {
  color: $color-red;
}

.invalid,
input:out-of-range,
input:invalid {
  border-color: $color-red !important;
}

.form-group {
  // Our inline errors
  input,
  select {
    &.successed {
      border-color: $color-green;
    }

    &.errored {
      border-color: $color-red;
    }

    &.caution {
      border-color: $color-yellow;
    }
  }

  .inline-warning {
    color: $color-red;

    &.caution {
      color: $color-gray--light;
    }
  }
}

input[type="color"] {
  width: 100px;
  border: none;
  background: none;
}

input[type="datetime-local"] {
  width: auto;
  &:invalid {
    border-color: transparent !important;
  }
}

::-webkit-calendar-picker-indicator {
  filter: invert(1);
  margin-left: 2px;
}
